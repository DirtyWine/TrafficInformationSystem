<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ncu.TrafficInformationSystem.Mapper.UserMapper">

    <sql id="BaseColumn">
        user_id, user_name, user_nickname, user_password, user_level, register_time
    </sql>

    <select id="find" resultType="com.ncu.TrafficInformationSystem.Bean.User">
        SELECT
          <include refid="BaseColumn"/>
        FROM user
        WHEN user_name = #{userName, jdbcType=VARCHAR}
    </select>
</mapper>